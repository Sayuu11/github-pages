AdminRoleLabel.Position = UDim2.new(0.7, 0, 0, 0)
AdminRoleLabel.Text = "Role"
AdminRoleLabel.Font = Enum.Font.SourceSans
AdminRoleLabel.TextSize = 16
AdminRoleLabel.TextColor3 = Color3.fromRGB(200, 200, 200)

-- Populate Admin List
for i = 1, 5 do
    local AdminItem = AdminTemplate:Clone()
    AdminItem.Parent = AdminList
    AdminItem.AdminNameLabel.Text = "Admin " .. i
    AdminItem.AdminRoleLabel.Text = "Role " .. i
end

-- Messages Frame
MessagesFrame.Parent = MainFrame
