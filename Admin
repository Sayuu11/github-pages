local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local AdminPanelLabel = Instance.new("TextLabel")
local PlayerStats = Instance.new("Frame")
local PlayersLabel = Instance.new("TextLabel")
local FavouritesLabel = Instance.new("TextLabel")
local UptimeLabel = Instance.new("TextLabel")
local AdminList = Instance.new("ScrollingFrame")
local AdminLabelTemplate = Instance.new("TextLabel")
local MessagesFrame = Instance.new("Frame")
local MessageTitle = Instance.new("TextLabel")
local MessageContent = Instance.new("TextLabel")

-- Parent to PlayerGui
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main Frame
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Size = UDim2.new(0, 600, 0, 400)
Frame.Position = UDim2.new(0.5, -300, 0.5, -200)

-- Admin Panel Label
AdminPanelLabel.Parent = Frame
AdminPanelLabel.Size = UDim2.new(0, 200, 0, 50)
AdminPanelLabel.Position = UDim2.new(0.05, 0, 0.05, 0)
AdminPanelLabel.Text = "Welcome Back, Admin"
AdminPanelLabel.Font = Enum.Font.SourceSansBold
AdminPanelLabel.TextSize = 20
AdminPanelLabel.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Player Stats Frame
PlayerStats.Parent = Frame
PlayerStats.Size = UDim2.new(0, 200, 0, 100)
PlayerStats.Position = UDim2.new(0.05, 0, 0.2, 0)
PlayerStats.BackgroundColor3 = Color3.fromRGB(40, 40, 40)

PlayersLabel.Parent = PlayerStats
PlayersLabel.Text = "Players: 25"
PlayersLabel.Size = UDim2.new(1, 0, 0.3, 0)
PlayersLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
PlayersLabel.TextSize = 16

FavouritesLabel.Parent = PlayerStats
FavouritesLabel.Text = "Favourites: 105.25K"
FavouritesLabel.Size = UDim2.new(1, 0, 0.3, 0)
FavouritesLabel.Position = UDim2.new(0, 0, 0.3, 0)
FavouritesLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
FavouritesLabel.TextSize = 16

UptimeLabel.Parent = PlayerStats
UptimeLabel.Text = "Uptime: 15h 31m"
UptimeLabel.Size = UDim2.new(1, 0, 0.3, 0)
UptimeLabel.Position = UDim2.new(0, 0, 0.6, 0)
UptimeLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
UptimeLabel.TextSize = 16

-- Admin List Frame
AdminList.Parent = Frame
AdminList.Size = UDim2.new(0, 200, 0, 200)
AdminList.Position = UDim2.new(0.05, 0, 0.4, 0)
AdminList.CanvasSize = UDim2.new(0, 0, 2, 0)
AdminList.ScrollBarThickness = 6

-- Add Admin Labels
for i = 1, 5 do
    local AdminLabel = AdminLabelTemplate:Clone()
    AdminLabel.Parent = AdminList
    AdminLabel.Text = "Admin " .. i .. " - Role"
    AdminLabel.Position = UDim2.new(0, 0, (i - 1) * 0.2, 0)
end

AdminLabelTemplate.Parent = nil
AdminLabelTemplate.Size = UDim2.new(1, 0, 0.2, 0)
AdminLabelTemplate.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
AdminLabelTemplate.TextColor3 = Color3.fromRGB(200, 200, 200)
AdminLabelTemplate.TextSize = 14

-- Messages Frame
MessagesFrame.Parent = Frame
MessagesFrame.Size = UDim2.new(0, 300, 0, 100)
MessagesFrame.Position = UDim2.new(0.5, 0, 0.8, 0)
MessagesFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)

MessageTitle.Parent = MessagesFrame
MessageTitle.Size = UDim2.new(1, 0, 0.3, 0)
MessageTitle.Text = "Message Title"
MessageTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
MessageTitle.TextSize = 16

MessageContent.Parent = MessagesFrame
MessageContent.Size = UDim2.new(1, 0, 0.7, 0)
MessageContent.Position = UDim2.new(0, 0, 0.3, 0)
MessageContent.Text = "No admin messages. Be the first to send one!"
MessageContent.TextColor3 = Color3.fromRGB(200, 200, 200)
MessageContent.TextSize = 14
MessageContent.TextWrapped = true
MessageContent.TextXAlignment = Enum.TextXAlignment.Left
MessageContent.TextYAlignment = Enum.TextYAlignment.Top
