AdminTemplate.Size = UDim2.new(1, 0, 0, 30)
AdminTemplate.BackgroundColor3 = Color3.fromRGB(40, 40, 40)

AdminNameLabel.Parent = AdminTemplate
AdminNameLabel.Size = UDim2.new(0.7, 0, 1, 0)
