-- Scripts for Buttons
KickButton.MouseButton1Click:Connect(function()
    local playerName = UsernameInput.Text
    local player = game.Players:FindFirstChild(playerName)
    if player then
        player:Kick("You have been kicked by an admin.")
    end
end)

BanButton.MouseButton1Click:Connect(function()
    -- Implement ban logic
end)

TeleportButton.MouseButton1Click:Connect(function()
    -- Implement teleport logic
end)

BringButton.MouseButton1Click:Connect(function()
    -- Implement bring logic
end)

JailButton.MouseButton1Click:Connect(function()
    -- Implement jail logic
end)

WarnButton.MouseButton1Click:Connect(function()
    local warnMessage = WarnInput.Text
    -- Broadcast warning to player
end)

AnnounceButton.MouseButton1Click:Connect(function()
    local message = AnnounceInput.Text
    if message and message ~= "" then
        announceEvent:FireAllClients(message)
    else
        warn("Please enter a message before announcing.")
    end
end)
