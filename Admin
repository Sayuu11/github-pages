UptimeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
UptimeLabel.Size = UDim2.new(1, 0, 0.33, 0)
UptimeLabel.Position = UDim2.new(0, 0, 0.66, 0)

-- Admin List Frame
AdminListFrame.Parent = MainFrame
AdminListFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
AdminListFrame.Size = UDim2.new(0, 300, 0, 300)
