ActionsFrame.Parent = AdminPanel
ActionsFrame.Size = UDim2.new(1, 0, 0.5, 0)
ActionsFrame.Position = UDim2.new(0, 0, 0.2, 0)

-- Create Action Buttons
local function createButton(name, text, pos)
    local button = Instance.new("TextButton")
    button.Parent = ActionsFrame
    button.Name = name
    button.Text = text
    button.Font = Enum.Font.SourceSans
    button.TextSize = 18
    button.Size = UDim2.new(0.45, 0, 0.2, 0)
    button.Position = pos
    button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    return button
end

KickButton = createButton("KickButton", "Kick", UDim2.new(0.05, 0, 0, 0))
BanButton = createButton("BanButton", "Ban", UDim2.new(0.5, 0, 0, 0))
TeleportButton = createButton("TeleportButton", "Teleport", UDim2.new(0.05, 0, 0.25, 0))
BringButton = createButton("BringButton", "Bring", UDim2.new(0.5, 0, 0.25, 0))
JailButton = createButton("JailButton", "Jail", UDim2.new(0.05, 0, 0.5, 0))
UnbanButton = createButton("UnbanButton", "Unban", UDim2.new(0.5, 0, 0.5, 0))

